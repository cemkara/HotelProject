@model HotelViewModel
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">New Hotel</h5>
                @*<small class="text-muted float-end">Default label</small>*@
                @*<div class="form-check form-switch mb-2 float-end">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked />
                    <label class="form-check-label" for="flexSwitchCheckChecked">Is Active?</label>
                    </div>*@
            </div>
            <div class="card-body">
                @using (Html.BeginForm("New", "Hotel", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Name, new{@class="form-label"})
                        @Html.TextBoxFor(model => model.Name, new { placeholder = "Hotel Name", @class = "form-control", })
                    </div>
                    <div class="mb-3">
                        <div class="form-group">
                            @Html.Label("Related User")
                            @Html.DropDownListFor(x=>x.SelectedUserId,(List<SelectListItem>)ViewBag.Users,new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="mb-3">
                        @Html.Label("Email");
                        <div class="input-group input-group-merge">
                            @Html.TextBoxFor(model => model.Email, new { placeholder = "Email address", @class = "form-control", })

                        </div>
                        <div class="form-text">You can use letters, numbers & periods</div>
                    </div>
                    <div class="mb-3">
                        @Html.Label("Phone");
                        @Html.TextBoxFor(model => model.Phone, new { placeholder = "Phone", @class = "form-control", })
                    </div>

                    <div class="mb-3">
                        <div class="form-group">
                            @Html.Label("District")
                            @Html.DropDownListFor(x=>x.SelectedDistrictId,(List<SelectListItem>)ViewBag.Districts,"Select District",new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="mb-3">
                        @Html.Label("Address");
                        @Html.TextBoxFor(model => model.AddressText, new { placeholder = "Address", @class = "form-control", })
                    </div>
                    <div class="mb-3">
                        <div class="form-group">
                            @Html.Label("Status")
                            @Html.DropDownListFor(x=>x.SelectedStatusId,(List<SelectListItem>)ViewBag.Statuses,"Select Status",new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Hotel Logo</label>
                        <input class="form-control" name="hotelLogo" type="file" id="hotelLogo" />
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                }
            </div>
        </div>
    </div>
</div>