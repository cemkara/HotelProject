@{
    ViewData["Title"] = "NewRestaurant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Dedeman Hotel New Restaurant</h5>
                @*<small class="text-muted float-end">Default label</small>*@
                <div class="form-check form-switch mb-2 float-end">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked />
                    <label class="form-check-label" for="flexSwitchCheckChecked">Is Active?</label>
                </div>
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Hotel</label>
                        <select class="form-select form-control">
                            <option>Select hotel</option>
                            <option selected value="1">Dedeman Istanbul</option>
                            <option value="2">Point Hotel</option>
                            <option value="3">Divan Hotel</option>
                            <option value="4">Last Hotel</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Restaurant</label>
                        <select class="form-select form-control">
                            <option selected>Select restaurant</option>
                            <option value="1">Nusret Steak House</option>
                            <option value="2">Hüsrev</option>
                            <option value="3">Divan Pattieseria</option>
                            <option value="4">Midpoint</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>