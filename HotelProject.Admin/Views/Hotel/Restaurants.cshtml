@{
    ViewData["Title"] = "Restaurants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h3 class="card-header">Hotel Restaurants</h3>
    <div class="row">
        <div class="col-md-8">
            <input type="text" class="form-control" placeholder="Search for text..." />
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-outline-primary">Search</button>
        </div>
        <div class="col-md-2 mb-3 justify-content-end">
            <select class="form-select" aria-label="Status">
                <option selected>All Status</option>
                <option value="1">Active</option>
                <option value="2">Passive</option>
            </select>
        </div>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="col-4">Name</th>
                    <th class="col-3">User</th>
                    <th class="col-2">Status</th>
                    <th class="col-3">Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                <tr>
                    <td><strong>Nusret Steak House</strong></td>
                    <td>
                        <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                            <li data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up"
                                title="Lilian Fuller">
                                <img src="../assets/img/avatars/5.png" alt="Avatar" class="rounded-circle" />
                            </li>
                        </ul>
                    </td>
                    <td><span class="badge bg-label-success me-1">Active</span></td>
                    <td>
                        <a href="/Restaurant/Update" type="button" class="btn btn-sm rounded-pill btn-outline-primary">Update</a>
                        <a href="#" type="button" class="btn btn-sm rounded-pill btn-outline-danger">Remove</a>
                    </td>
                </tr>

                <tr>
                    <td><strong>Midpoint</strong></td>
                    <td>
                        <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                            <li data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up"
                                title="Lilian Fuller">
                                <img src="../assets/img/avatars/5.png" alt="Avatar" class="rounded-circle" />
                            </li>
                            <li data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up"
                                title="Sophia Wilkerson">
                                <img src="../assets/img/avatars/6.png" alt="Avatar" class="rounded-circle" />
                            </li>
                        </ul>
                    </td>
                    <td><span class="badge bg-label-success me-1">Active</span></td>
                    <td>
                        <a href="/Restaurant/Update" type="button" class="btn btn-sm rounded-pill btn-outline-primary">Update</a>
                        <a href="#" type="button" class="btn btn-sm rounded-pill btn-outline-danger">Remove</a>
                    </td>
                </tr>
                <tr>
                    <td><strong>Burger King</strong></td>
                    <td>
                        <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                            <li data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up"
                                title="Lilian Fuller">
                                <img src="../assets/img/avatars/5.png" alt="Avatar" class="rounded-circle" />
                            </li>
                        </ul>
                    </td>
                    <td><span class="badge bg-label-success me-1">Active</span></td>
                    <td>
                        <a href="/Restaurant/Update" type="button" class="btn btn-sm rounded-pill btn-outline-primary">Update</a>
                        <a href="#" type="button" class="btn btn-sm rounded-pill btn-outline-danger">Remove</a>
                    </td>
                </tr>
            </tbody>
        </table>
