            </select>
        </div>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="col-4">Name</th>
                    <th class="col-3">Type</th>
                    <th class="col-3">Date</th>
                    <th class="col-2">Actions</th>
