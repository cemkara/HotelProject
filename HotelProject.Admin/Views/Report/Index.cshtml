@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h3 class="card-header">Reports</h3>
    <div class="row">
        <div class="col-md-8">
            <input type="text" class="form-control" placeholder="Search for text..." />
        </div>
