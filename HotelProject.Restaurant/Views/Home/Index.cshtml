<div class="card mt-3">
    <h3 class="card-header">Last Orders</h3>
    <div class="row">
        <div class="col-md-8">
            <input type="text" class="form-control" placeholder="Search for text..." />
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-outline-primary">Search</button>
        </div>
        <div class="col-md-2 mb-3 justify-content-end">
            <select class="form-select" aria-label="Status">
                <option selected>All Status</option>
                <option value="1">Preparing</option>
                <option value="2">On The Way</option>
                <option value="3">Delivered</option>
                <option value="4">Cancel</option>
            </select>
        </div>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="col-1">Room</th>
                    <th class="col-4">Hotel</th>
                    <th class="col-3">Restaurant</th>
                    <th class="col-1">Status</th>
                    <th class="col-1">Price</th>
                    <th class="col-1">Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                <tr>
                    <td>3004</td>
                    <td><strong>Istanbul Dedeman Hotel</strong></td>
                    <td>Nusret Steak House</td>
                    <td><span class="badge bg-label-info me-1">Preparing</span></td>
                    <td>₺250.25</td>
                    <td>
                        <a href="/Order/Details" type="button" class="btn btn-sm rounded-pill btn-outline-primary">Details</a>
                    </td>
                </tr>
                <tr>
                    <td>2008</td>
                    <td><strong>Point Hotel</strong></td>
                    <td>Hüsrev</td>
                    <td><span class="badge bg-label-warning me-1">on the way</span></td>
                    <td>₺320.00</td>
                    <td>
                        <a href="/Order/Details" type="button" class="btn btn-sm rounded-pill btn-outline-primary">Details</a>
                    </td>
                </tr>
                <tr>
                    <td>5006</td>
                    <td><strong>Divan Hotel</strong></td>
                    <td>Midpoint</td>
                    <td><span class="badge bg-label-success me-1">Delivered</span></td>
                    <td>₺2250.25</td>
                    <td>
                        <a href="/Order/Details" type="button" class="btn btn-sm rounded-pill btn-outline-primary">Details</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
